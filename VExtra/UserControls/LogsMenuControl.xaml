<UserControl x:Class="VExtra.UserControls.LogsMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VExtra.UserControls"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="440" d:DesignWidth="950" Background="{StaticResource MaterialDesignPaper}">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock TextAlignment="Center" FontFamily="Open Sans" Margin="0 5 0 0" FontWeight="Bold" FontSize="25" Opacity="0.8" Text="Логи приложения"></TextBlock>
            <ListBox FontFamily="Open Sans" FontWeight="SemiBold" FontSize="12" Margin="0 5 0 0" Width="800" Height="300">

            </ListBox>
            <Button Foreground="#FF3A3A3A" Style="{StaticResource MaterialDesignFlatSecondaryDarkButton}" Width="500" FontFamily="Open Sans" FontWeight="Bold" Content="Обновить логи"></Button>
        </StackPanel> 
    </Grid>
</UserControl>
